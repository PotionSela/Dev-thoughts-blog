  </head>

  <body>
    <header class="navBar">
      <nav>
        {{#if logged_in}}
          <button class="btn btn-primary" href="/">Home</button>
          <button class="btn btn-primary" href="/dashboard">Dashboard</button>
          <button class="button" id="logout">Logout</button>
        {{else}}
          <button class="btn btn-primary"><a href="/">Home</a></button>
          <button class="btn btn-primary"><a
              href="/dashboard"
            >Dashboard</a></button>
          <button class="btn btn-primary"><a href="/login">Login</a></button>
        {{/if}}
      </nav>
    </header>

    <h1 class="text-center">The Tech Blog</h1>

    <main>
      {{{body}}}
    </main>

  </body>

</html>